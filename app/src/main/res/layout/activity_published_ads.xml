<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PublishedAds"
    android:background="@color/white">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="405sp">

            <ProgressBar
                android:id="@+id/progressBar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"/>

            <LinearLayout
                android:background="@drawable/gradientbackground"
                android:layout_width="match_parent"
                android:layout_height="350sp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/edit"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_marginTop="18sp"
                    android:layout_marginLeft="18sp"
                    android:src="@drawable/ic_edit_black_24dp" />

                <com.pkmmte.view.CircularImageView
                    android:layout_width="140sp"
                    android:layout_height="140sp"
                    android:src="@drawable/userpic"
                    android:layout_gravity="center"
                    android:layout_margin="18sp"
                    android:id="@+id/ivuserpic"
                    android:scaleType="fitXY"/>

                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:id="@+id/tvusername"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="21sp"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="400sp"
                android:layout_height="120sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="275sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                card_view:cardElevation="10dp"
                android:elevation="12sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Liked"
                            android:textColor="@color/black"
                            android:textSize="20sp" />
                        <TextView
                            android:id="@+id/liked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="125"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:paddingTop="10sp"
                            android:textColor="@color/colorPrimaryDark"/>

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Posted"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            />
                        <TextView
                            android:id="@+id/posted"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1205"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:paddingTop="10sp"
                            android:textColor="@color/colorPrimaryDark"/>

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Coins"
                            android:textColor="@color/black"
                            android:textSize="20sp" />
                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="360"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:paddingTop="10sp"
                            android:textColor="@color/colorPrimaryDark"/>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="45sp"
            android:layout_marginLeft="40sp">
            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="36sp"
                    android:layout_height="36sp"
                    android:src="@drawable/ic_email_black_24dp"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20sp"
                    android:id="@+id/profemail"
                    android:textColor="@color/black"
                    android:text="Wiliam@gmail.com"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="25sp"
                android:orientation="horizontal"
                android:paddingLeft="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="36sp"
                    android:layout_height="36sp"
                    android:src="@drawable/ic_phone_android_black_24dp"/>
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tvpnum"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20sp"
                    android:textColor="@color/black"
                    android:text="+266 225 225"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="25sp"
                android:orientation="horizontal"
                android:paddingLeft="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="36sp"
                    android:layout_height="36sp"
                    android:src="@drawable/ic_location_city_black_24dp"/>
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tvcurrentcity"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20sp"
                    android:textColor="@color/black"
                    android:text="Location"/>
            </LinearLayout>

        </LinearLayout>

            <Button
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Watch Ad"
                android:elevation="10sp"
                android:stateListAnimator="@anim/fade_out_left"
                android:layout_marginTop="35sp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shadow"
                android:paddingLeft="35sp"
                android:paddingRight="35sp"
                android:textSize="18sp"
                android:textColor="@color/white"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="26sp"
            android:elevation="10sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Published ADs"
                android:layout_margin="8sp"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_marginBottom="4sp"/>

        </androidx.cardview.widget.CardView>



        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="165sp"
            android:id="@+id/rvmyads"
            android:orientation="horizontal">

        </androidx.recyclerview.widget.RecyclerView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="6sp"
            android:elevation="10sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Liked ADs"
                android:layout_margin="8sp"
                android:textSize="14sp"
                android:textAlignment="center"/>

        </androidx.cardview.widget.CardView>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="160sp"
            android:id="@+id/rvlikedads"
            android:orientation="horizontal">

        </androidx.recyclerview.widget.RecyclerView>


            <Button
                android:layout_marginTop="35sp"
                android:id="@+id/logout"
                android:layout_marginLeft="18sp"
                android:layout_marginRight="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/shadow"
                android:text="Log out"
                android:textSize="20sp"
                android:textColor="#fff"/>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bmaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="18sp"
        app:elevation="12sp"
        app:borderWidth="0dp"
        android:background="@drawable/shadow"
        android:src="@drawable/ic_add_black_24dp"
        />

</RelativeLayout>